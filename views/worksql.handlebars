<h1>Your Workout Schedual</h1>
<h2>You have completed {{workoutnum}} exercizes.</h2>

<form method="post">
	<input type="text" name="name" id="Name">
	<input type="number" name="reps" id="Reps">
	<input type="number" name="weight" id="Weight">
	<input type="date" name="date" id="Date">
	<input type="boolean" name="lbs" id="Lbs:1 or Kg:0?">
	<input type="submit" name="add session" value="Add Session">
</form>

{{#if workout}}
<table id="worktable">
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>Lbs(1)/Kg(0)</th>
	</tr>
	{{#each workout}}
	<tr>
		<td>{{this.name}}</td>
		<td>{{this.reps}}</td>
		<td>{{this.weight}}</td>
		<td>{{this.date}}</td>
		<td>{{this.lbs}}</td>
		<input type="button" value="delete" onclick="deleteRow('worktable',this)"/>
	</tr>
	{{/each}}
</ul>
{{/if}}
