<h1>Your Workout Schedual</h1>
<h2>You have completed {{workoutnum}} exercizes.</h2>


<form id="woNew" action="/insert" >
	<fieldset>
		<label>Name:
			<input type="text" name="Name" id="Name">
		</label>
	
		<label>Reps:
			<input type="number" name="Reps" id="Reps">
		</label>
	
		<label>Weight:
			<input type="number" name="Weight" id="Weight">
		</label>
	
		<label>Date
			<input type="date" name="Date" id="Date">
		</label>
	
		<label>Lbs:1, Kg:0
			<input type="boolean" name="Lbs" id="Lbs">
		</label>
		<input type="Submit" name="Submit" value="Add Session">
	</fieldset>
</form>


<table id="worktable">
	<tr>
		<th hidden>Id</th>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>Lbs(1)/Kg(0)</th>
	</tr>
	{{#each workout}}
	<tr>
		<td hidden>{{this.id}}</td>
		<td>{{this.name}}</td>
		<td>{{this.reps}}</td>
		<td>{{this.weight}}</td>
		<td>{{this.date}}</td>
		<td>{{this.lbs}}</td>
		<input type="button" name="Update" onclick="UpdateRow('worktable',this)">
		<input type="button" value="Delete" 
		onclick="deleteRow('worktable',this)"/>
	</tr>
	{{/each}}
</ul>
