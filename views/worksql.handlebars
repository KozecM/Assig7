<h1>Your Workout Schedual</h1>
<h2>You have completed {{workoutnum}} exercizes.</h2>

<img src="img/Register.png">

<div id="form_post">
	<label>Name:
		<input type="text" name="name" id="Name">
	</label>
	
	<label>Reps:
		<input type="number" name="reps" id="Reps">
	</label>
	
	<label>Weight:
		<input type="number" name="weight" id="Weight">
	</label>
	
	<label>Date
		<input type="date" name="date" id="Date">
	</label>
	
	<label>Lbs:1, Kg:0
		<input type="boolean" name="lbs" id="Lbs/Kg">
	</label>
	
	<button onclick="wo.insert();">Add Session</button>
</div>

{{#if workout}}
<table id="worktable">
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>Lbs(1)/Kg(0)</th>
	</tr>
	{{#each workout}}
	<tr>
		<td>{{this.name}}</td>
		<td>{{this.reps}}</td>
		<td>{{this.weight}}</td>
		<td>{{this.date}}</td>
		<td>{{this.lbs}}</td>
		<input type="button" value="Delete" onclick="deleteRow('worktable',this)"/>
	</tr>
	{{/each}}
</ul>
{{/if}}
